<% @page_title = "Edit Pages" %>
<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="page edit">
  <h2>Edit Page</h2>

  <%= form_for(:page, :url => {:action => 'update', :id => @page.id}) do |f| %>
  
     <%= render(:partial => 'form', :locals => {:f => f}) %>
    
    <div class="form-buttons">
      <%= submit_tag("Edit page") %>
    </div>
    
  <% end %>
</div>
